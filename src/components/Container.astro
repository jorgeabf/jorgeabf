---
import Menu from './Menu.astro';
import Footer from './Footer.astro';
import MenuItem from './MenuItem.astro';
import AboutIcon from './svg/About.astro';
import ContactIcon from './svg/Contact.astro';
import PortfolioIcon from './svg/Portfolio.astro';
import BlogIcon from './svg/Blog.astro';
---

<div class="container">
    <Menu>
        <MenuItem name="about" href="/">
        <AboutIcon />
        </MenuItem>
        <MenuItem name="portfolio" href="/portfolio">
        <PortfolioIcon />
        </MenuItem>
        <MenuItem name="blog" href="/posts">
        <BlogIcon />
        </MenuItem>
        <MenuItem name="contacto" href="/contacto">
        <ContactIcon />
        </MenuItem>
    </Menu>
    <slot />
    <Footer />
</div>

<style>
    .container {
        --max-width: 1300px;
        width: 100%;
        max-width: var(--max-width);
        min-height: 100vh;
        padding: 2em 1em 0;
        margin-inline: auto;
        background-color: var(--color-bg);
        display: grid;
        align-items: center;
        gap: 3em 1em;
        grid-template-columns: 1fr 1fr min-content;
        grid-template-rows: min-content 1fr min-content;
        grid-template-areas:
            "header header menu"
            "main main main"
            "footer footer footer";
    }
</style>