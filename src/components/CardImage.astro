---
import { Picture } from 'astro:assets'
export interface Props {
  href: string
  imagen: string
  alt: string
  proyecto: string
  fecha: string
}
const { href, imagen, alt, proyecto, fecha } = Astro.props
---

<a
  href={href}
  class='card'
  target='_blank'
  rel='noopener noreferrer'
>
  <Picture
    class='card__img'
    src={imagen}
    alt={alt}
    loading='lazy'
    decoding='async'
    formats={['avif', 'webp']}
    width={400}
    height={225}
  />

  <div class='card__content'>
    <h3 class='card__titulo'>
      {proyecto}
      <span class='card__span'>&rarr;</span>
    </h3>
    <p class='card__parrafo'>
      {fecha}
    </p>
  </div>
</a>

<style>
  .card {
    position: relative;
    overflow: hidden;
    border: var(--border);
    border-radius: var(--border-radius);
    color: var(--text-color);
  }

  .card__img {
    width: 100%;
    object-fit: cover;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .card__content {
    padding: 1em;
    border-top: var(--border);
    font-size: .8em;
    background-color: hsl(0, 0%, 100%);
  }

  .card__titulo {
    margin: 0;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .card__parrafo {
    margin-block: 0.5em 0;
  }

  .card__span {
    display: inline-block;
    transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .card:is(:hover, :focus-within) .card__img {
    transform: scale(1.05);
  }

  .card:is(:hover, :focus-within) .card__titulo {
    color: var(--primary);
  }

  .card:is(:hover, :focus-within) .card__span {
    transform: translateX(0.2em);
  }
</style>
