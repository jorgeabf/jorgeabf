---
export interface Props {
    title: string;
}
const { title } = Astro.props as Props;

---

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
</head>

<body>
    <slot />
</body>

</html>
<style>
    :root {
        --font-small: clamp(.85rem, 0.14vw + 0.80rem, 0.9rem);
        --font-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-xl: clamp(2.2rem, 2.1vw + 1.65rem, 3.55rem);

        --color-text: hsl(8, 16%, 29%);
        --color-bg: hsl(0, 0%, 97.5%);
        --border-color: hsl(8, 18%, 89%);
        --color-primary: #0051CD;
        --color-primary-light: #0080FF;
        --color-secondary: #F1433F;
    }

    *,
    *::after,
    *::before {
        box-sizing: border-box;
    }

    html,
    body {
        min-height: 100vh;
    }

    html {
        font-family: system-ui, sans-serif;
        font-size: var(--font-base);
        color: var(--color-text);
        background-color: var(--color-bg);
    }

    body {
        margin: 0;
    }

    :global(h1) {
        font-size: var(--font-xl);
    }

    :global(h2) {
        font-size: var(--font-lg);
    }
</style>