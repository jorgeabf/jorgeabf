---
export interface Props {
    title: string;
}
const { title } = Astro.props as Props;

---

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{title}</title>
</head>

<body>
    <slot />
</body>

</html>

<style is:global>
    :root {
        --fs--2: clamp(0.64rem, calc(0.71rem + -0.10vw), 0.69rem);
        --fs--1: clamp(0.80rem, calc(0.85rem + -0.06vw), 0.83rem);
        --fs-0: clamp(1.00rem, calc(1.00rem + 0.00vw), 1.00rem);
        --fs-1: clamp(1.20rem, calc(1.18rem + 0.09vw), 1.25rem);
        --fs-2: clamp(1.44rem, calc(1.40rem + 0.22vw), 1.56rem);
        --fs-3: clamp(1.73rem, calc(1.65rem + 0.41vw), 1.95rem);
        --fs-4: clamp(2.07rem, calc(1.94rem + 0.67vw), 2.44rem);
        --fs-5: clamp(2.49rem, calc(2.28rem + 1.02vw), 3.05rem);


        --color-text: hsl(8, 16%, 29%);
        --color-text-light: hsl(8, 16%, 40%);
        --color-bg: hsl(0, 0%, 97.5%);
        --border-color: hsl(8, 18%, 89%);
        --color-primary: hsl(216, 100%, 40%);
        --color-primary-light: hsl(210, 100%, 50%);
        --color-secondary: hsl(1, 86%, 60%);
    }

    *,
    *::after,
    *::before {
        box-sizing: border-box;
    }

    html,
    body {
        min-height: 100vh;
    }

    body {
        margin: 0;
        line-height: 1.5;
        font-family: system-ui, sans-serif;
        font-size: var(--fs-1);
        background-color: var(--color-bg);
        color: var(--color-text);
    }

    main {
        grid-area: main;
    }

    a {
        color: var(--color-primary);
        outline: none;
        text-decoration: none;
        transition: color .2s ease-in-out;
    }

    a:is(:hover, :active, :focus) {
        color: var(--color-secondary)
    }
</style>