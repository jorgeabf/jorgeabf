---
export interface Props {
   title: string;
}
const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="es">

<head>
   <meta charset="UTF-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="description" content="Sitio web y porfolio personal de Jorge Arce Balluerca">
   <meta name="color" content="#765a56">
   <link rel="icon" type="image/x-icon" href="/favicon.svg" />
   <title>{title}</title>
</head>

<body>
   <slot />
</body>

</html>

<style is:global>
   @font-face {
      font-family: 'Encode-700';
      font-style: normal;
      font-display: swap;
      src: url('../../fonts/EncodeSansSemiCondensed-Bold.ttf') format('woff2');
   }

   @font-face {
      font-family: 'Encode-900';
      font-style: normal;
      font-display: swap;
      src: url('../../fonts/EncodeSansSemiCondensed-Black.ttf') format('woff2');
   }

   :root {
      --fs--2: clamp(0.64rem, calc(0.71rem + -0.10vw), 0.69rem);
      --fs--1: clamp(0.80rem, calc(0.85rem + -0.06vw), 0.83rem);
      --fs-0: clamp(1.00rem, calc(1.00rem + 0.00vw), 1.00rem);
      --fs-1: clamp(1.20rem, calc(1.18rem + 0.09vw), 1.25rem);
      --fs-2: clamp(1.44rem, calc(1.40rem + 0.22vw), 1.56rem);
      --fs-3: clamp(1.73rem, calc(1.65rem + 0.41vw), 1.95rem);
      --fs-4: clamp(2.07rem, calc(1.94rem + 0.67vw), 2.44rem);
      --fs-5: clamp(2.49rem, calc(2.28rem + 1.02vw), 3.05rem);


      --color-text: hsl(0, 0%, 20%);
      --color-text-light: hsl(0, 0%, 30%);
      --color-bg: hsl(0, 0%, 97.5%);
      --color-primary: hsl(216, 70%, 40%);
      --color-primary-light: hsl(216, 70%, 80%);
      --color-secondary: hsl(1, 70%, 50%);

      --border: 2px solid hsl(0, 0%, 92.5%);
      --border-radius: .5em;
   }

   *,
   *::after,
   *::before {
      box-sizing: border-box;
   }

   html,
   body {
      min-height: 100vh;
   }

   body {
      margin: 0;
      line-height: 1.5;
      font-family: system-ui, sans-serif;
      font-size: var(--fs-1);
      background-color: var(--color-bg);
      color: var(--color-text);
   }

   main {
      grid-area: main;
   }

   h2,
   h3,
   h4,
   h5,
   h6 {
      font-family: 'Encode-700', sans-serif;
      margin-top: 0;
   }

   a {
      color: var(--color-primary);
      outline: none;
      text-decoration: none;
      transition: color .2s ease-in-out;
   }

   a:is(:hover, :active, :focus) {
      color: var(--color-secondary)
   }

   img {
      max-width: 100%;
      display: block;
   }
</style>